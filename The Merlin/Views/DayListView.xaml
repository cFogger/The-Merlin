<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.Views.DayListView"
             Title="Days"
             x:Name="daylst">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding dayItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10,0" StrokeThickness="0.1" BackgroundColor="{StaticResource Gray950}">
                        <Grid ColumnDefinitions="80,100,*">
                            <Button Text="Go" Command="{Binding Path=BindingContext.GoToDetail, Source={x:Reference daylst}}" CommandParameter="{Binding .}" Grid.Column="0"></Button>
                            <Label Text="{Binding Date, StringFormat='{0:dd.MM.yy}'}" Grid.Column="1" VerticalOptions="Center"></Label>
                            <Label Text="{Binding DayType}" Grid.Column="2" VerticalOptions="Center"></Label>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <HorizontalStackLayout>
            <Label Text="Add Date: "></Label>
            <DatePicker Date="{Binding SelectedDate}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>