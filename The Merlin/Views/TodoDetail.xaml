<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.Views.TodoDetail"
             Title="TodoDetail">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalOptions" Value="Center"></Setter>
            <Setter Property="Margin" Value="10,0"></Setter>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Grid ColumnSpacing="10" RowSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Text="Todo:" Grid.Row="0" Grid.Column="0"></Label>
            <Entry Grid.Row="0" Grid.Column="1" Text="{Binding TodoText}" TextChanged="ItemChanged"/>
            
            <Label Text="Desc:" Grid.Row="1" Grid.Column="0"></Label>
            <Editor Grid.Column="1" Grid.Row="1" Text="{Binding TodoInside}" TextChanged="ItemChanged" AutoSize="TextChanges"/>

            <HorizontalStackLayout Grid.Row="0" Grid.Column="2" HeightRequest="32">
                <Label Text="Created:"/>
                <Label Text="{Binding CreatedAt}"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Grid.Row="1" Grid.Column="2" HeightRequest="32">
                <Label Text="Priority:"/>
                <Label Text="{Binding Priority}"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Grid.Row="2" Grid.Column="2" HeightRequest="32">
                <Label Text="Assigned:"></Label>
                <DatePicker Date="{Binding AssignedDate}"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Grid.Row="3" Grid.Column="2" HeightRequest="32">
                <Label Text="Is Completed:"/>
                <Switch IsToggled="{Binding IsCompleted}" Toggled="Switch_Toggled"/>
            </HorizontalStackLayout>

            <Label Text="Time Type:" Grid.Row="2" Grid.Column="0"></Label>
            <Picker x:Name="TimeTypePckr" SelectedIndex="{Binding TimeMode}" SelectedIndexChanged="TimeTypePckr_SelectedIndexChanged" Grid.Row="2" Grid.Column="1">
                <Picker.Items>
                    <x:String>No time</x:String>
                    <x:String>Predefined</x:String>
                    <x:String>Estimated Time</x:String>
                    <x:String>Limited Time</x:String>
                </Picker.Items>
            </Picker>

            <StackLayout x:Name="TimerStack" Grid.Row="4" Grid.ColumnSpan="3"></StackLayout>
            <HorizontalStackLayout Grid.Row="5" Grid.Column="2" VerticalOptions="End" HorizontalOptions="End" Spacing="10" Margin="20">
                <Button
                Text="Done"
                x:Name="ToggleButton1"
                Clicked="ToggleButton1_Clicked" 
                VerticalOptions="Center" 
                HorizontalOptions="End" 
                BackgroundColor="#2F2F2F"
                    FontSize="Small" Padding="15"/>
                <Button
                Text="Delete"
                x:Name="DeleteButton"
                Clicked="DeleteButton_Clicked"
                VerticalOptions="Center"
                HorizontalOptions="End"
                BackgroundColor="#9D1818"
                TextColor="GhostWhite"
                    FontSize="Small" Padding="15"/>
            </HorizontalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>