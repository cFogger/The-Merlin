<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.Views.TodoDetail"
             Title="{Binding Todo.TodoText}">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalOptions" Value="Center"></Setter>
            <Setter Property="Margin" Value="10,0"></Setter>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Grid ColumnSpacing="10" RowSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Label Text="Todo:" Grid.Row="0" Grid.Column="0"></Label>
            <Entry Grid.Row="0" Grid.Column="1" Text="{Binding myTodoText}"/>

            <Label Grid.Row="1" Grid.Column="1" Text="{Binding TodoDefText, StringFormat='Def: {0}'}" HeightRequest="32"/>
            <Label Grid.Row="0" Grid.Column="2" Text="{Binding Todo.CreatedAt, StringFormat='Created: {0}'}" HeightRequest="32"/>
            <Label Grid.Row="1" Grid.Column="2" Text="{Binding TotalTimeString, StringFormat='Total: {0}'}" HeightRequest="32"/>
            <Label Grid.Row="2" Grid.Column="2" Text="{Binding Todo.AssignedDate, StringFormat='Assigned Date: {0:dd.MM.yy}'}" HeightRequest="32"></Label>

            
            <!-- To Remove -->
            <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" HorizontalOptions="Center">
                <Button Command="{Binding StartStopCommand}" IsVisible="{Binding IsStartVisible}" FontAttributes="Bold" HeightRequest="44">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding TimerRunning}"
                                     Value="true">
                            <Setter Property="Text" Value="Stop"></Setter>
                            <Setter Property="BackgroundColor" Value="DarkRed"></Setter>
                        </DataTrigger>
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding TimerRunning}"
                                     Value="false">
                            <Setter Property="Text" Value="Start"></Setter>
                            <Setter Property="BackgroundColor" Value="DarkGreen"></Setter>
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
                <Button Text="Complete" Command="{Binding CompleteCommand}" IsVisible="{Binding IsManualCompletion}" HeightRequest="44"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="3" Grid.Column="2" HeightRequest="32">
                <Label Text="{Binding Todo.CompletionType}"/>
                <Label Text="{Binding Todo.Status}"/>
            </HorizontalStackLayout>
            <Button Grid.Row="4" Grid.Column="2" WidthRequest="66" HeightRequest="44" Command="{Binding DeleteCommand}" Text="Delete" BackgroundColor="DarkRed" Opacity="0.8"></Button>
            <Label Grid.Row="5" Grid.Column="2" Text="{Binding Todo.Duration}"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>