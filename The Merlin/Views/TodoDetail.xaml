<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.Views.TodoDetail"
             Title="TodoDetail">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalOptions" Value="Center"></Setter>
            <Setter Property="Margin" Value="10,0"></Setter>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Grid ColumnSpacing="10" RowSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Text="Todo:" Grid.Row="0" Grid.Column="0"></Label>
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding TodoText}" />
            
            <Label Text="Desc:" Grid.Row="1" Grid.Column="0"></Label>
            <Label Grid.Column="1" Grid.Row="1" Text="{Binding TodoInside}" />
            
            <Label Text="Created:" Grid.Row="2" Grid.Column="0"></Label>
            <Label Grid.Column="1" Grid.Row="2" Text="{Binding CreatedAt}"/>
            
            <Label Text="Priority:" Grid.Row="3" Grid.Column="0"></Label>
            <Label Grid.Column="1" Grid.Row="3" Text="{Binding Priority}"/>
            
            <Label Text="Is Completed:" Grid.Row="4" Grid.Column="0"></Label>
            <Switch Grid.Column="1" Grid.Row="4" IsToggled="{Binding IsCompleted}"/>
            
            <Label Text="Assigned:" Grid.Row="5" Grid.Column="0"></Label>
            <DatePicker Grid.Column="1" Grid.Row="5" Date="{Binding AssignedDate}"/>

            <Label Text="Time Type:" Grid.Row="6" Grid.Column="0"></Label>
            <Picker Grid.Row="6" Grid.Column="1">
                <Picker.Items>
                <x:String>Predefined</x:String>
                <x:String>Estimated Time</x:String>
                <x:String>Limited Time</x:String>
                <x:String>No time</x:String>
                </Picker.Items>
            </Picker>

            <HorizontalStackLayout Grid.Row="7" Grid.ColumnSpan="2">
            <Button
                Text="Done"
                x:Name="ToggleButton1"
                Clicked="ToggleButton1_Clicked" 
                VerticalOptions="Center" 
                HorizontalOptions="End" 
                BackgroundColor="#2F2F2F"/>
            
            <Button 
                Text="Delete"
                x:Name="DeleteButton"
                Clicked="DeleteButton_Clicked"
                VerticalOptions="Center"
                HorizontalOptions="End"
                BackgroundColor="#9D1818"
                TextColor="GhostWhite"/>
            </HorizontalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>