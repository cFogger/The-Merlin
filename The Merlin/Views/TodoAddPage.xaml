<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.TodoAddPage"
             Title="TodoAddPage">
    <VerticalStackLayout>
        <Entry x:Name="TitleEntry" Placeholder="Title" Margin="10"/>
        <Editor x:Name="TextEditor" Placeholder="Details" Margin="10" HeightRequest="100"/>
        <DatePicker x:Name="AssignedDatePck" Margin="10" BackgroundColor="#2F2F2F"/>
        <HorizontalStackLayout Margin="10" RadioButtonGroup.GroupName="PriortySelecting" RadioButtonGroup.SelectedValue="{Binding priorityValue}" >
            <Label Text="Set Priority"/>
            <RadioButton x:Name="PriorityLow" Value="0" Content="Low" Margin="10"/>
            <RadioButton x:Name="PriorityMedium" Value="1" Content="Medium" Margin="10"/>
            <RadioButton x:Name="PriorityHigh" Value="2" Content="High" Margin="10"/>
            <RadioButton x:Name="PriorityCritical" Value="3" Content="Critical" Margin="10"/>
        </HorizontalStackLayout>
        <Button Text="Add Todo" Clicked="Button_Clicked" Margin="10"/>
    </VerticalStackLayout>
</ContentPage>