<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.Views.TodoAdd">
    <Grid Padding="5,2,5,2" Background="#232323">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <HorizontalStackLayout Grid.Column="0" HorizontalOptions="Fill" VerticalOptions="Center">
            <Entry 
                x:Name="TitleEntry"
                VerticalOptions="Center"
                WidthRequest="250"
                Margin="25,0"
                ReturnCommand="{Binding AddCommand}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Column="1">
            <DatePicker 
                x:Name="AssignedDate"
                Margin="15,0"
                VerticalOptions="Center" 
                HorizontalOptions="End" BackgroundColor="#2F2F2F"/>
            <Button 
                Text="Add Todo"
                x:Name="AddButton"
                Command="{Binding AddCommand}"
                VerticalOptions="Center" 
                HorizontalOptions="End" />
        </HorizontalStackLayout>
    </Grid>
</ContentView>
