<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.MainPage">
    <ScrollView Orientation="Both" HorizontalScrollBarVisibility="Default" VerticalScrollBarVisibility="Default">
        <VerticalStackLayout>
            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="10">
                <Label
                    Text="The Merlin"
                    FontSize="32"
                    HorizontalOptions="Center" />
            </HorizontalStackLayout>
            <VerticalStackLayout x:Name="MainStack" Padding="0,50,0,0" Spacing="10"></VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
