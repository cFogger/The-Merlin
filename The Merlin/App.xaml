<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:The_Merlin"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:services="clr-namespace:The_Merlin.Services"
             x:Class="The_Merlin.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ControlTemplate x:Key="MerlinLoadingTemplate">
                <Grid>
                    <ContentPresenter />
                    <Grid BackgroundColor="#80000000"
                          IsVisible="{Binding IsLoading, Source={x:Static services:LoadingService.Instance}}"
                          InputTransparent="False">
                        <VerticalStackLayout VerticalOptions="Center" Spacing="15">
                            <ActivityIndicator IsRunning="True" Color="{StaticResource PrimaryDark}" Scale="2" />
                            <Label Text="Merlin haber verecek..." 
                       TextColor="White" 
                       HorizontalOptions="Center" 
                       FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Grid>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
