<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.Timer.ChronoPage"
             Title="ChronoPage">
    <Grid ColumnSpacing="10" Margin="15" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackLayout Grid.Row="0" Grid.ColumnSpan="2" x:Name="ContentStack"></StackLayout>
        <Button x:Name="ChronoButton" Clicked="ChronoButton_Clicked" Text="Kronometre" Grid.Row="1"></Button>
        <Button x:Name="CountDwnButton" Clicked="CountDwnButton_Clicked" Text="GerisayÄ±m" Grid.Row="1" Grid.Column="1"></Button>
    </Grid>
</ContentPage>