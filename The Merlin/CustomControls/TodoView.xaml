<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.CustomControls.TodoView"
             xmlns:local="clr-namespace:The_Merlin.CustomControls">
    <Grid Padding="5,2,5,2">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Path=NavigateCommand, Source={RelativeSource AncestorType={x:Type local:TodoView}}}"/>
        </Grid.GestureRecognizers>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <VerticalStackLayout Grid.Column="0" HorizontalOptions="Fill">
            <Label
                Text="{Binding Path=myTodoItem.TodoText, Source={RelativeSource AncestorType={x:Type local:TodoView}}}"
                VerticalOptions="Center" 
                HorizontalOptions="Fill"
                Margin="25,5,25,5"/>
        </VerticalStackLayout>
    </Grid>
</ContentView>
