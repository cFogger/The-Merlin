<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.CustomControls.TodoAdd"
             xmlns:local="clr-namespace:The_Merlin.CustomControls">
    <Grid Padding="5,2,5,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <HorizontalStackLayout Grid.Column="0" VerticalOptions="Center">
            <Label Margin="15,0" Text="Add " VerticalOptions="Center"></Label>
            <Picker Margin="10,0" VerticalOptions="Center" 
                    ItemsSource="{Binding TodoDefs, Source={RelativeSource AncestorType={x:Type local:TodoAdd}}}" 
                    SelectedItem="{Binding SelectedTodoDef, Source={RelativeSource AncestorType={x:Type local:TodoAdd}}, Mode=TwoWay}" 
                    ItemDisplayBinding="{Binding TodoDefText}"/>
        </HorizontalStackLayout>
            <Button 
                Grid.Column="1"
                Text="Add Todo"
                Command="{Binding AddCommand, Source={RelativeSource AncestorType={x:Type local:TodoAdd}}}"/>
    </Grid>
</ContentView>
