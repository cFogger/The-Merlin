<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Merlin.CustomControls.TodoAdd"
             xmlns:local="clr-namespace:The_Merlin.CustomControls">
    <Grid Padding="5,2,5,2" Background="#232323">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <HorizontalStackLayout Grid.Column="0" HorizontalOptions="Fill" VerticalOptions="Center">
            <Picker Margin="25,0" VerticalOptions="Center" 
                    ItemsSource="{Binding TodoDefs, Source={RelativeSource AncestorType={x:Type local:TodoAdd}}}" 
                    SelectedItem="{Binding SelectedTodoDef, Source={RelativeSource AncestorType={x:Type local:TodoAdd}}, Mode=TwoWay}" 
                    ItemDisplayBinding="{Binding TodoDefText}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Column="1">
            <Button 
                Text="Add Todo"
                Command="{Binding AddCommand, Source={RelativeSource AncestorType={x:Type local:TodoAdd}}}"
                VerticalOptions="Center" 
                HorizontalOptions="End" />
        </HorizontalStackLayout>
    </Grid>
</ContentView>
